<resources>

    <declare-styleable name="MyMaterialDesign">
        <!--<attr name="colorPrimaryVariant" format="color"/>-->
        <!--<attr name="colorSecondaryVariant" format="color"/>-->
        <attr name="colorSurface" format="color" />
        <!--<attr name="colorOnPrimary" format="color"/>
        <attr name="colorOnSecondary" format="color"/>
        <item name="colorOnError" format="color"/>
        <item name="colorOnSurface" format="color"/>
        <item name="scrimBackground" format="color"/>-->
        <attr name="colorNormalReactionCounterBackground" format="color" />
        <attr name="colorSelectedReactionCounterBackground" format="color" />

        <attr name="colorBottomNavigationSelected" format="color" />
        <attr name="colorBottomNavigationNotSelect" format="color" />

        <attr name="colorNoteActionButtonTint" format="color" />

        <attr name="colorMessageSelf" format="color" />
        <attr name="colorMessageRecipient" format="color" />

        <attr name="colorSeparator" format="color" />

    </declare-styleable>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">?android:textColorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorDarkAccent</item>
        <item name="colorSurface">@color/colorLightSurface</item>

        <item name="actionBarSize">50dp</item>

        <item name="colorNormalReactionCounterBackground">@color/colorNormalReaction</item>
        <item name="colorSelectedReactionCounterBackground">@color/colorSelectedReaction</item>
        <item name="colorBottomNavigationSelected">@color/colorItemSelected</item>
        <item name="colorBottomNavigationNotSelect">@color/colorItemNotSelected</item>

        <item name="colorNoteActionButtonTint">@color/colorItemNotSelected</item>

        <item name="colorMessageSelf">@color/colorMessageSelf</item>
        <item name="colorMessageRecipient">@color/colorMessageRecipient</item>
        <item name="colorSeparator">@color/colorSeparator</item>
        <item name="tabStyle">@style/TabStyle</item>



    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="AppThemeDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorDarkPrimary</item>
        <item name="colorOnPrimary">?android:textColorPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimaryDark</item>
        <item name="tabStyle">@style/Widget.MaterialComponents.TabLayout.Colored</item>
        <item name="colorAccent">@color/colorDarkAccent</item>

        <item name="android:windowBackground">@color/colorDarkWindowBackground</item>
        <item name="colorSurface">@color/colorDarkSurface</item>
        <item name="android:textColor">@color/colorDarkTextColor</item>

        <item name="colorBottomNavigationSelected">@color/colorDarkBottomNavSelected</item>
        <item name="colorBottomNavigationNotSelect">@color/colorDarkBottomNavNormal</item>
        <item name="colorNoteActionButtonTint">@color/colorDarkTextColor</item>
        <item name="actionBarSize">50dp</item>

        <item name="colorNormalReactionCounterBackground">@color/colorNormalReaction</item>
        <item name="colorSelectedReactionCounterBackground">@color/colorSelectedReaction</item>

        <item name="colorMessageSelf">@color/colorMessageSelfDark</item>
        <item name="colorMessageRecipient">@color/colorMessageRecipientDark</item>
        <item name="colorSeparator">@color/colorSeparatorDark</item>
        <item name="android:textColorPrimary">@color/colorTextColorPrimaryColorDarkDark</item>
        <item name="android:textColorSecondary">@color/colorTextColorSecondary</item>

        <item name="android:navigationBarColor">@color/navigationDarkColor</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
    </style>

    <style name="AppThemeBlack" parent="AppThemeDark">
        <item name="colorPrimary">@color/colorBlackPrimary</item>
        <item name="colorPrimaryDark">@color/colorBlackPrimary</item>
        <item name="colorAccent">@color/colorDarkAccent</item>
        <item name="android:windowBackground">@color/colorBlackPrimary</item>
        <item name="colorSurface">@color/colorBlackPrimary</item>
        <item name="android:textColor">@color/colorBlackTextColor</item>

        <item name="colorBottomNavigationSelected">@color/colorBlackTextColor</item>
        <item name="colorBottomNavigationNotSelect">@color/colorItemNotSelected</item>
        <item name="colorNoteActionButtonTint">@color/colorItemNotSelected</item>
        <item name="actionBarSize">50dp</item>

        <item name="colorMessageSelf">@color/colorMessageSelf</item>
        <item name="colorMessageRecipient">@color/colorMessageRecipient</item>
        <item name="colorSeparator">@color/colorSeparator</item>
        <item name="android:navigationBarColor">@color/colorBlackPrimary</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>


    </style>

    <style name="AppThemeBread" parent="AppTheme">
        <item name="colorPrimary">@color/colorBreadPrimary</item>
        <item name="colorPrimaryDark">@color/colorBreadPrimaryDark</item>
        <item name="colorSurface">@color/colorBreadSurface</item>
        <item name="colorAccent">@color/colorBreadAccent</item>
        <item name="colorBottomNavigationSelected">@color/colorBreadBottomNavSelected</item>
    </style>


    <style name="ReactionTabStyle" parent="Widget.Design.TabLayout">
        <item name="android:textColor">?android:attr/textColor</item>
    </style>
    <style name="LicensePageTheme" parent="Theme.AppCompat.Light.DarkActionBar"/>

    <style name="TabStyle" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="background">?attr/colorPrimary</item>
    </style>
</resources>
